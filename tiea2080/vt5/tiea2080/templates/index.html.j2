    <div id="overlay">
        <!-- Latausindikaattori. Alustetaan t√§ss√§, jotta saadaan sivu nopeasti liikkeelle. -->
        <div id="throbberi">
            üïê
        </div>
        <script type="text/javascript">
        var kyselyit√§_odottamassa = 1;
        function odota_kysely√§() {
            var f = ['üïê','üïë','üïí','üïì','üïî','üïï','üïñ','üïó','üïò','üïô','üïö','üïõ'];

            function loop() {
                if(kyselyit√§_odottamassa > 0) {
                    $("#overlay").show();
                    $("#throbberi").text(f[Math.floor((Date.now()/100)%f.length)]);
                    setTimeout(loop, 100);
                } else {
                    $("#overlay").hide();
                }
            }

            loop();
        }
        $(document).ready(function() {kyselyit√§_odottamassa -= 1;});
        odota_kysely√§();
        </script>
    </div>

